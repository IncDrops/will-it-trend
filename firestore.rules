rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to content and predictions
    match /content/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can update (e.g., generate images)
    }

    match /predictions_cache/{docId} {
      allow read: if true;
      allow write: if false; // Should only be written by the backend
    }

    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/{document=**} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // API Keys should not be client-accessible
    match /api_keys/{keyId} {
      allow read, write: if false;
    }
  }
}
