rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all client-side access to all collections by default.
    // Your server-side code (Firebase Functions, Admin SDK) will still have full access,
    // which is the intended behavior for this application.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
